{
  "extends": "@themeaningof8/tsconfig/nextjs.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/app/components/*",
      ],
      "@api/*": [
        "src/app/api/*",
      ],
      "@/*": [
        "./*",
      ],
    }
  }
}