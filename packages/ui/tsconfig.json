{
  "extends": "@themeaningof8/tsconfig/react-library.json",
  "include": [
    "**/*.ts",
    "**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "storybook-static"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "dom",
      "esnext"
    ],
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@lib/*": [
        "./src/lib/*"
      ],
      "@styles/*": [
        "./src/styles/*"
      ],
    }
  }
}